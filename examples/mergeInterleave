int [] a, b, c;
int i, alength, blength, clength;

requires 0 <= alength;
requires 0 <= blength;
requires 0 <= clength;
requires 2 * blength == clength;
requires 2 * alength == clength;
requires i == 0;
ensures forall int i, 0 <= i & i < alength ==> c[i * 2] == a[i] & c[i * 2 + 1] == b[i];

while (i < alength) do
:: true -> c[i * 2] = a[i]; c[i * 2 + 1] = b[i]; i = i + 1;
od